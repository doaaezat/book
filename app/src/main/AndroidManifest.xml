<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dododo.book_store" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".registration"
            android:label="@string/title_activity_registration"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".Book"
            android:label="@string/title_activity_book"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".Details"
            android:label="@string/title_activity_details" >
        </activity>
        <activity
            android:name=".search"
            android:label="@string/title_activity_search" >
        </activity>
        <activity
            android:name=".quantity"
            android:label="@string/title_activity_quantity" >
        </activity>
        <activity
            android:name=".orders"
            android:label="@string/title_activity_orders" >
        </activity>
        <activity
            android:name=".selectopt"
            android:label="@string/title_activity_selectopt" >
        </activity>
        <activity
            android:name=".update_quantity"
            android:label="@string/title_activity_update_quantity" >
        </activity>
    </application>

</manifest>
