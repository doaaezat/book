<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fofo"
    tools:context="com.example.dododo.book_store.search">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:id="@+id/s_title"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="180dp"
        android:layout_marginEnd="180dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Author"
        android:id="@+id/s_author"
        android:textSize="25dp"
        android:layout_alignRight="@+id/s_title"
        android:textStyle="italic"
        android:layout_alignEnd="@+id/s_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/s_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Type"
        android:id="@+id/s_type"
        android:textSize="25dp"
        android:textStyle="normal"
        android:layout_alignRight="@+id/s_author"
        android:layout_alignEnd="@+id/s_author"
        android:layout_below="@+id/s_author"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="publication date"
        android:id="@+id/s_date"
        android:textSize="25dp"
        android:layout_below="@+id/s_type"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price"
        android:id="@+id/s_price"
        android:textSize="25dp"
        android:textStyle="normal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/s_date"
        android:layout_alignEnd="@+id/s_date"
        android:layout_below="@+id/s_date" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make order"
        android:id="@+id/s_boutton"
        android:textSize="25dp"
        android:layout_below="@+id/s_price"
        android:layout_centerHorizontal="true" />

    <!--<ImageView-->
        <!--android:layout_width="120dp"-->
